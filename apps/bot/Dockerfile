# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build bot`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t bot`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system bot && \
          adduser --system -G bot bot

COPY dist/apps/bot bot
RUN chown -R bot:bot .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix bot --omit=dev -f install

CMD [ "node", "bot" ]
